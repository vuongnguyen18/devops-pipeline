{
  "name": "sample-api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "test": "jest --ci --reporters=default --reporters=jest-junit --coverage",
    "lint": "eslint ."
  },
  "dependencies": {
    "express": "^4.19.2",
    "prom-client": "^14.2.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./",
          "outputName": "junit.xml"
        }
      ]
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}